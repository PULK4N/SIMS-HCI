        <Button Content="Button" HorizontalAlignment="Left" Margin="516,112,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="516,148,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="516,184,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox HorizontalAlignment="Left" Height="206" Margin="174,102,0,0" VerticalAlignment="Top" Width="322"/>
    </Grid>
</Window>
